#include <inttypes.h>
#include "car.h"

#define MOTOR_CONTROLLER_ADDR 0x40050000

typedef enum {false = 0, true = 1} bool;

int main()
{
	int count = 0;
	bool fwd = true;
	while( 1 )
	{
		if (count++ >= 4000000) {
			if (fwd)
				fwd = 0;
			else
				fwd = 1;
			count = 0;
		}
		move(fwd, fwd);
	}
}
