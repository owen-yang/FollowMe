#ifndef CAR_H_
#define CAR_H_

typedef enum {false = 0, true = 1} bool;
#define MOTOR_CONTROLLER_ADDR 0x40050000

void move(bool leftFwd, bool rightFwd) {
	uint32_t *addr = (uint32_t*)MOTOR_CONTROLLER_ADDR;
	uint32_t data = 0;

	data ^= rightFwd;
	data ^= leftFwd << 1;

	data ^= 90 << 2;
	data ^= 90 << 9;

	*addr = data;
}

#endif /* CAR_H_ */
